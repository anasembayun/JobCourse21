<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:elevation="0dp"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:id="@+id/liniearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linear_outline"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="5dp">


        <ImageView
            android:id="@+id/img_loker"
            android:layout_marginStart="5dp"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="10dp"
            android:src="@drawable/img_prsh" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/loker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/raleway_bold"
                android:textFontWeight="600"
                android:text="Loker"
                android:textSize="4.4pt"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/perusahaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:text="Nama perusahaan"
                android:textSize="4.4pt"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/black"
                android:text="Alamat perusahaan"
                android:textSize="4.4pt"
                android:layout_marginBottom="5dp"/>


        </LinearLayout>

        <Button
            android:id="@+id/btn_web"
            android:layout_width="65dp"
            android:layout_height="38dp"
            android:layout_marginEnd="10dp"
            android:background="@color/orange_35"
            android:fontFamily="@font/roboto_light"
            android:text="Buka \n Website"
            android:textSize="3.6pt" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
